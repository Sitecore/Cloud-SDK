{
  "name": "engage-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/engage-core/src",
  "projectType": "library",
  "targets": {
    "publish": {
      "command": "node tools/scripts/publish.mjs engage-core {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/engage-core/**/*.ts", "packages/engage-core/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/engage-core/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "stryker": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx stryker run ./packages/engage-core/stryker.conf.js"],
        "parallel": false
      }
    }
  },
  "tags": []
}
