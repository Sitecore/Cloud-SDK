{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "rules": {
    "strict": ["error", "global"],
    "spaced-comment": ["error", "always"] // Add space after comment
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "max-len": ["error", { "code": 120, "ignoreStrings": true }]
      }
    },
    {
      "files": ["src/lib/utils/consts.ts"],
      "rules": {
        "@typescript-eslint/naming-convention": [
          "error",
          {
            "selector": "variable",
            "format": ["UPPER_CASE"],
            "modifiers": ["const", "exported"]
          }
        ]
      }
    }
  ]
}
