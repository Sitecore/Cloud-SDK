{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": ".",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@sitecore-cloudsdk/core": ["packages/core/src/index.ts"],
      "@sitecore-cloudsdk/utils": ["packages/utils/src/index.ts"],
      "@sitecore-cloudsdk/events/server": ["packages/events/src/server.ts"],
      "@sitecore-cloudsdk/events/browser": ["packages/events/src/browser.ts"],
      "@sitecore-cloudsdk/personalize/server": ["packages/personalize/src/server.ts"],
      "@sitecore-cloudsdk/personalize/browser": ["packages/personalize/src/browser.ts"]
    }
  },
  "exclude": ["tmp"]
}
