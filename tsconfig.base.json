{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@sitecore-cloudsdk/engage-core": ["packages/engage-core/src/index.ts"],
      "@sitecore-cloudsdk/engage-utils": ["packages/engage-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
