{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": ".",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@sitecore-cloudsdk/engage-core": ["packages/engage-core/src/index.ts"],
      "@sitecore-cloudsdk/engage-utils": ["packages/engage-utils/src/index.ts"],
      "@sitecore-cloudsdk/events": ["packages/events/src/index.ts"],
      "@sitecore-cloudsdk/personalize": ["packages/personalize/src/index.ts"]
    }
  },
  "exclude": ["tmp"]
}
