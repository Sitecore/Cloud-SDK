{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "../../dist/out-tsc",
    "allowJs": true,
    "types": ["cypress", "node"],
    "resolveJsonModule": true,
    "paths": {
      "@sitecore-cloudsdk/cypress-utils": ["./integration-tests/cypress-utils/src/index.ts"],
      "@badeball/cypress-cucumber-preprocessor/*": [
        "./node_modules/@badeball/cypress-cucumber-preprocessor/dist/subpath-entrypoints/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js", "cypress.config.ts", "cypress/plugins/index.js"]
}
